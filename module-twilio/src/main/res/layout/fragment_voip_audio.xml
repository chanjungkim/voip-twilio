<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:theme="@style/Theme.AppCompat.NoActionBar">


    <include
        android:id="@+id/include_profile"
        layout="@layout/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_audio_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_end_call"
        app:backgroundTint="@color/color_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_audio_output_handle"
        app:layout_constraintStart_toEndOf="@+id/fab_audio_mic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_audio_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fab_audio_end"
        app:layout_constraintEnd_toStartOf="@+id/fab_audio_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fab_audio_end"
        tools:backgroundTint="@color/color_green"
        tools:src="@drawable/ic_mic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_audio_output_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fab_audio_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fab_audio_end"
        app:layout_constraintTop_toTopOf="@+id/fab_audio_end"
        tools:backgroundTint="@color/color_green"
        tools:src="@drawable/ic_speaker_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>